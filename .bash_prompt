if tput setaf 1 &> /dev/null; then
	tput sgr0
	if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
		RED=$(tput setaf 1)
		YELLOW=$(tput setaf 11)
		MAGENTA=$(tput setaf 9)
		ORANGE=$(tput setaf 172)
		GREEN=$(tput setaf 119)
		PURPLE=$(tput setaf 141)
		WHITE=$(tput setaf 0)
	else
		RED=$(tput setaf 1)
		YELLOW=$(tput setaf 11)
		MAGENTA=$(tput setaf 5)
		ORANGE=$(tput setaf 4)
		GREEN=$(tput setaf 2)
		PURPLE=$(tput setaf 1)
		WHITE=$(tput setaf 7)
	fi
	BOLD=$(tput bold)
	RESET=$(tput sgr0)
else
    RED="\033[1;35m"
    YELLOW="\033[1;43m"
	MAGENTA="\033[1;31m"
	ORANGE="\033[1;33m"
	GREEN="\033[1;32m"
	PURPLE="\033[1;35m"
	WHITE="\033[1;37m"
	BOLD=""
	RESET="\033[m"
fi
BIWHITE='\e[1;97m'

if [[ `whoami` = "root" ]]; then
    USERCOLOR='\e[48;5;160m'
else
    USERCOLOR=$(tput setaf 38)
fi

HOSTCOLOR=$(tput setaf 208)
GROUPCOLOR=$(tput setaf 119)
ATCOLOR=$BIWHITE

export PS1="[ \[$USERCOLOR\]\u\[$RESET\]\[$GROUPCOLOR\]\$(show_group_not_default)\[$ATCOLOR\]@\[$HOSTCOLOR\]\h \[$GREEN\]\w\[$BIWHITE\] ]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" on \")\[$PURPLE\]\$(parse_git_branch)\[$RESET\]\[$BIWHITE\]\$ \[$RESET\]"
export PS2="\[$ORANGE\]â†’ \[$RESET\]"

